<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring	http://camel.apache.org/schema/spring/camel-spring-2.13.0.xsd
       http://www.springframework.org/schema/context	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:property-placeholder ignore-unresolvable="true" location="classpath:prop/df-mail-cfg.properties" />
	
	<camelContext id="mail.dataflowcontext" xmlns="http://camel.apache.org/schema/spring">
		<propertyPlaceholder id="mail.props" location="classpath:prop/df-common-cfg.properties,classpath:prop/df-mail-cfg.properties,classpath:prop/qqdataserv.properties" />
		<endpoint uri="seda:mailsecondStage?{{common.seda.stdparams}}" id="mailsecondStage" />
		
		<route id="mail">
			<from uri="timer://pdfmail?fixedRate=true&amp;period={{mail.pdfdealer.timerperiod}}"/>
			<to uri="seda:mailsecondStage?waitForTaskToComplete=Never&amp;{{common.seda.stdparams}}"/>
		</route>
		
		<route>
			<from ref="mailsecondStage" />
			<to uri="bean:plugins4Mail?method=rcv" />
		</route>
	</camelContext>
</beans>